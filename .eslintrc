{
  "parser"  : "babel-eslint",
  "extends" : [
    "airbnb"
  ],
  "env"     : {
    "browser" : true
  },
  "globals" : {
    "__DEV__"      : false,
    "__PROD__"     : false,
    "__DEBUG__"    : false,
    "__DEBUG_NEW_WINDOW__" : false
  },
  "rules": {
    "no-console": 2,
    "block-spacing": [2, "always"],
    "new-parens": 2,
    "no-dupe-class-members": 2,
    "no-this-before-super": 1,
    "object-curly-spacing": [2, "never"],
    "prefer-template": 2,
    "valid-jsdoc": [1, {
      "requireParamDescription": false,
      "requireReturnDescription": false
    }]
  }
}
